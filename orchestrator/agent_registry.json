{
    "agents": [
        {
            "agent_name": "Open Negotiation AI Agent",
            "subagent_name": "Document Creation Agent",
            "endpoint": "http://localhost:8003/run-advanced-workflow",
            "method": "POST",
            "timeout": 300,
            "file_resolution": {
                "enabled": true,
                "base_path": "../OPN-Agent/AI_open_negotiation/Data/Input/",
                "patterns": {
                    "excel": "{client_name} W{wave_number}*.xlsx",
                    "template": "*Template*.docx"
                },
                "required_params": [
                    "client_name",
                    "wave_number"
                ]
            },
            "payload_mapping": {
                "request_id": "orch_{client_name}_{wave_number}",
                "excel_path": "resolved_excel_path",
                "template_docx": "resolved_template_path",
                "output_folder": "AI_open_negotiation/Data/Output/{client_name}_W{wave_number}",
                "use_ai": true,
                "user_instructions": "Auto-triggered from orchestrator: Client {client_name}, Wave {wave_number}"
            }
        }
    ]
}